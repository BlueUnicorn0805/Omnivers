<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_back_main">

    <hawaiiappbuilders.omniversapp.global.OpenSansTextView
        android:id="@+id/openSansTextView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deposit your check below"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/textCheckFrontBack"
        app:layout_constraintStart_toStartOf="parent" />

    <hawaiiappbuilders.omniversapp.global.OpenSansBoldTextView
        android:id="@+id/textCheckFrontBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FRONT"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/viewBoundingBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/viewBoundingBox"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:alpha="0.5"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white"
        tools:layout_editor_absoluteX="64dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnClose"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="32dp"
        android:background="@drawable/ic_close"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent" />

    <hawaiiappbuilders.omniversapp.global.OpenSansTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Place check in box and take a picture"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewBoundingBox" />

</androidx.constraintlayout.widget.ConstraintLayout>