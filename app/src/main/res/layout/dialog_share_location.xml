<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical">

        <hawaiiappbuilders.omniversapp.global.OpenSansRadioButton
            android:id="@+id/radio_emagency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency"
            android:textSize="16sp" />

        <hawaiiappbuilders.omniversapp.global.OpenSansRadioButton
            android:id="@+id/radio_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Share In Email"
            android:textSize="16sp" />

        <hawaiiappbuilders.omniversapp.global.OpenSansRadioButton
            android:id="@+id/radio_in_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:checked="true"
            android:text="Share In App"
            android:textSize="16sp" />
    </RadioGroup>

    <hawaiiappbuilders.omniversapp.global.OpenSansButton
        android:id="@+id/button_to_my_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttonmain"
        android:text="@string/text_to_my_location"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <hawaiiappbuilders.omniversapp.global.OpenSansButton
        android:id="@+id/button_to_my_location_repeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/text_to_my_location_repeat"
        android:background="@drawable/buttonmain"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <hawaiiappbuilders.omniversapp.global.OpenSansButton
        android:id="@+id/button_to_map_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:text="@string/text_to_map_location"
        android:background="@drawable/buttonmain"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>