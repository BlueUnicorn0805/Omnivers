<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewItemPanel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding2"
    android:layout_marginTop="@dimen/padding1"
    android:layout_marginRight="@dimen/padding2"
    android:layout_marginBottom="@dimen/padding1"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgLoc"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="right"
        android:src="@drawable/ic_location_state"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <hawaiiappbuilders.omniversapp.global.OpenSansTextView
        android:id="@+id/tvStateName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding1"
        android:layout_marginRight="@dimen/padding1"
        android:paddingBottom="@dimen/padding1"
        android:text="Xiao MingMing"
        android:textColor="@color/white"
        android:textSize="@dimen/font_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/selected"
        app:layout_constraintStart_toEndOf="@+id/imgLoc"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/selected"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="right"
        android:src="@drawable/ic_check_location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/padding1"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgLoc" />

</androidx.constraintlayout.widget.ConstraintLayout>