<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="3dp"
    android:gravity="center"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="20dp"
    app:contentPadding="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding2"
        android:orientation="vertical">

        <hawaiiappbuilders.omniversapp.global.OpenSansBoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please choose your action"
            android:gravity="center"
            android:textColor="@color/app_grey_dark"
            android:textSize="@dimen/font_5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding3"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnUpVote"
                android:layout_width="@dimen/padding9"
                android:layout_height="@dimen/padding9"
                android:src="@drawable/ic_vvote_up" />

            <ImageView
                android:id="@+id/btnDownVote"
                android:layout_width="@dimen/padding9"
                android:layout_height="@dimen/padding9"
                android:layout_marginLeft="@dimen/padding3"
                android:src="@drawable/ic_vvote_down" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding3"
            android:orientation="horizontal">

            <hawaiiappbuilders.omniversapp.global.OpenSansButton
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonmain"
                android:minHeight="41dp"
                android:text="CANCEL"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_6"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>