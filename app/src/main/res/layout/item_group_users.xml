<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/padding1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/padding1"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/padding1">

        <hawaiiappbuilders.omniversapp.global.MaterialLetterIcon
            android:id="@+id/ivCircleName"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:mli_initials="true"
            app:mli_initials_number="2"
            app:mli_letter="Family"
            app:mli_letter_color="@color/white"
            app:mli_letter_size="26"
            app:mli_letters_number="2"
            app:mli_shape_color="@color/app_red"
            app:mli_shape_type="circle" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding1"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/padding1">

            <hawaiiappbuilders.omniversapp.global.OpenSansTextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Family"
                android:textColor="@color/white"
                android:textSize="@dimen/font_6" />

            <hawaiiappbuilders.omniversapp.global.OpenSansTextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="xxxxx@yyyyy.com"
                android:textColor="@color/white"
                android:textSize="@dimen/font_7" />
        </LinearLayout>

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="35dp"
        android:background="@color/app_grey_dark" />

</LinearLayout>