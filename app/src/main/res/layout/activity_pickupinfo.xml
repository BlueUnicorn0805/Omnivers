                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLines="1"
                android:singleLine="true"
                android:visibility="gone"
                android:background="@drawable/bg_edittext_black_round"
                android:textColor="@color/app_grey_dark"
                android:textColorHint="@color/app_grey"
                android:padding="@dimen/padding2"
                android:textSize="@dimen/font_5" />

            <hawaiiappbuilders.omniversapp.global.OpenSansTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="15dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="5dp"
                android:text="Note"
                android:textColor="@color/app_grey_dark"
                android:textSize="@dimen/font_6" />

            <hawaiiappbuilders.omniversapp.global.OpenSansEditText
                android:id="@+id/edtNote"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:imeOptions="actionNext"
                android:inputType="textMultiLine"
                android:textColor="@color/app_grey_dark"
                android:background="@drawable/bg_edittext_black_round"
                android:textColorHint="@color/semiwhite"
                android:padding="@dimen/padding2"
                android:gravity="left|top"
                android:textSize="@dimen/font_5" />

            <hawaiiappbuilders.omniversapp.global.OpenSansTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="15dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="5dp"
                android:text="Repeat"
                android:textColor="@color/app_grey_dark"
                android:textSize="@dimen/font_6" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <hawaiiappbuilders.omniversapp.global.OpenSansCheckBox
                        android:id="@+id/chkMon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:buttonTint="@color/black"
                        android:text="Monday"
                        android:layout_gravity="right"
                        android:layoutDirection="rtl"
                        android:textColor="@color/app_grey_dark"
                        android:textSize="@dimen/font_6" />

                    <hawaiiappbuilders.omniversapp.global.OpenSansCheckBox
                        android:id="@+id/chkTue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:buttonTint="@color/black"
                        android:text="Tuesday"
                        android:layout_gravity="right"
                        android:layoutDirection="rtl"
                        android:textColor="@color/app_grey_dark"
                        android:textSize="@dimen/font_6" />

                    <hawaiiappbuilders.omniversapp.global.OpenSansCheckBox
                        android:id="@+id/chkWed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:buttonTint="@color/black"
                        android:text="Wednesday"
                        android:layout_gravity="right"
                        android:layoutDirection="rtl"
                        android:textColor="@color/app_grey_dark"
                        android:textSize="@dimen/font_6" />

                    <hawaiiappbuilders.omniversapp.global.OpenSansCheckBox
                        android:id="@+id/chkThu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:buttonTint="@color/black"
                        android:text="Thursday"
                        android:layout_gravity="right"
                        android:layoutDirection="rtl"
                        android:textColor="@color/app_grey_dark"
                        android:textSize="@dimen/font_6" />

                    <hawaiiappbuilders.omniversapp.global.OpenSansCheckBox
                        android:id="@+id/chkFri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:buttonTint="@color/black"
                        android:text="Friday"
                        android:layout_gravity="right"
                        android:layoutDirection="rtl"
                        android:textColor="@color/app_grey_dark"
                        android:textSize="@dimen/font_6" />

                    <hawaiiappbuilders.omniversapp.global.OpenSansCheckBox
                        android:id="@+id/chkSat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:buttonTint="@color/black"
                        android:text="Saturday"
                        android:layout_gravity="right"
                        android:layoutDirection="rtl"
                        android:textColor="@color/app_grey_dark"
                        android:textSize="@dimen/font_6" />

                    <hawaiiappbuilders.omniversapp.global.OpenSansCheckBox
                        android:id="@+id/chkSun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:buttonTint="@color/black"
                        android:text="Sunday"
                        android:layout_gravity="right"
                        android:layoutDirection="rtl"
                        android:textColor="@color/app_grey_dark"
                        android:textSize="@dimen/font_6" />

                </LinearLayout>
            </HorizontalScrollView>

            <hawaiiappbuilders.omniversapp.global.OpenSansButton
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/padding3"
                android:layout_marginBottom="@dimen/padding3"
                android:background="@drawable/buttonmain"
                android:text="All data is correct. Add this trip"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/paymentTypeGroup" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>

