<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#00000000">

    <androidx.cardview.widget.CardView
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_gravity="center"
        android:elevation="3dp"
        android:gravity="center"
        android:orientation="vertical"
        app:cardBackgroundColor="#c0303030"
        app:cardCornerRadius="5dp"
        app:contentPadding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <hawaiiappbuilders.omniversapp.global.OpenSansLightTextView
                android:id="@+id/tvAlert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="41dp"
                android:layout_marginTop="@dimen/padding3"
                android:layout_marginRight="@dimen/padding3"
                android:padding="10dp"
                android:text="ERROR"
                android:gravity="left"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btnCloseAlert"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="end|top"
            android:src="@drawable/selector_close_alert_btn"/>

    </androidx.cardview.widget.CardView>

</FrameLayout>