<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <hawaiiappbuilders.omniversapp.global.ResizableImageView
        android:id="@+id/btnBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/selector_backbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.017" />


    <ImageView
        android:id="@+id/imgCheckUser"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        app:layout_constraintTop_toBottomOf="@+id/btnBack"
        android:src="@drawable/ic_check_user"
        />


    <hawaiiappbuilders.omniversapp.global.OpenSansBoldTextView
        android:id="@+id/openSansBoldTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding2"
        android:text="Create your “@Handle”"
        android:textColor="@color/black"
        android:textSize="@dimen/font_12"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCheckUser" />

<!--
    <hawaiiappbuilders.nemt.global.OpenSansBoldTextView
        android:id="@+id/openSansBoldTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding5"
        android:text="This will be used by others to: \nSend you money\nSend you invites\n\nNote: Do Not use email "
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/openSansBoldTextView" />
-->



    <hawaiiappbuilders.omniversapp.global.OpenSansBoldTextView
        android:id="@+id/openSansBoldTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding5"
        android:text="This will be used by others to:"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/openSansBoldTextView" />


    <hawaiiappbuilders.omniversapp.global.OpenSansBoldTextView
        android:id="@+id/openSansBoldTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send you money"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_5"
        android:drawableLeft="@drawable/circle_red_small"
        android:drawablePadding="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/openSansBoldTextView2" />



    <hawaiiappbuilders.omniversapp.global.OpenSansBoldTextView
        android:id="@+id/openSansBoldTextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send you invites"
        android:drawablePadding="@dimen/_5sdp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_5"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableLeft="@drawable/circle_red_small"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/openSansBoldTextView3" />


    <hawaiiappbuilders.omniversapp.global.OpenSansBoldTextView
        android:id="@+id/openSansBoldTextView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\n\nNote: Do Not use email "
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/openSansBoldTextView4" />




    <hawaiiappbuilders.omniversapp.global.OpenSansEditText
        android:id="@+id/edtUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding3"
        android:background="@drawable/bg_edittext_black_round"
        android:hint="\@handle"
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:layout_marginHorizontal="@dimen/padding8"
        android:paddingHorizontal="@dimen/padding3"
        android:paddingVertical="@dimen/padding2"
        android:textColor="@color/black"
        android:textColorHint="#80303030"
        android:textSize="@dimen/font_6"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openSansBoldTextView5"
        app:layout_constraintVertical_bias="0.5" />

    <hawaiiappbuilders.omniversapp.global.OpenSansBoldTextView
        android:id="@+id/textResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_5"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        tools:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCheckName"
        android:text="Good choice! Click Next" />


    <hawaiiappbuilders.omniversapp.global.OpenSansButton
        android:id="@+id/btnCheckName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding5"
        android:layout_marginBottom="@dimen/padding1"
        android:background="@drawable/shape_auth_rect_dark"
        android:minHeight="45dp"
        android:text="Check Name"
        android:paddingHorizontal="@dimen/padding5"
        android:textColor="@color/white"
        android:textSize="@dimen/font_6"
        app:layout_constraintTop_toBottomOf="@+id/edtUsername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <hawaiiappbuilders.omniversapp.global.OpenSansButton
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/buttonmain_round"
        android:minHeight="45dp"
        android:drawableRight="@drawable/ic_navigate_next_24dp"
        android:drawableTint="@color/white"
        android:paddingHorizontal="@dimen/padding3"
        android:text="Next"
        android:elevation="@dimen/padding1"
        android:textColor="@color/white"
        android:textSize="@dimen/font_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>