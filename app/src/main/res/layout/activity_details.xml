<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbar"
        android:background="@drawable/top_bar_blue"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="64dp"/>

    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <hawaiiappbuilders.omniversapp.global.ProportionalImageView
            android:background="@color/white"
            android:layout_gravity="center"
            android:visibility="gone"
            android:scaleType="fitXY"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <hawaiiappbuilders.omniversapp.global.OpenSansTextView
            android:visibility="invisible"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextBlack"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:text="America's carrier force" />
        <hawaiiappbuilders.omniversapp.global.OpenSansTextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextBlack"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text="Hire just one"
            />
        <hawaiiappbuilders.omniversapp.global.OpenSansTextView
            android:id="@+id/instaCashTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            style="@style/TextWhite"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/instacashtm"
            />
        <hawaiiappbuilders.omniversapp.global.OpenSansTextView
            android:id="@+id/instaCash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextWhite"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">

            <hawaiiappbuilders.omniversapp.global.MyViewPager
                android:id="@+id/resume_details_vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>