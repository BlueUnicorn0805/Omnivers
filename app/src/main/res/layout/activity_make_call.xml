<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvLoaderText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="center"
        android:text="Calling\nChuck Lacona"
        android:textColor="@color/gold"
        android:textSize="36sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="30dp"
        android:padding="20dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/btnCamera"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:cardBackgroundColor="@color/app_grey"
            app:cardCornerRadius="32dp"
            app:cardElevation="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivCam"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/round_videocam_24"
                    android:tint="@color/white"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <View
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/btnReject"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:cardBackgroundColor="@color/red"
            app:cardCornerRadius="32dp"
            app:cardElevation="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/round_phone_24"
                    android:tint="@color/white"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/btnDollar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:cardBackgroundColor="@color/app_orange"
            app:cardCornerRadius="32dp"
            app:cardElevation="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/round_attach_money_24"
                    android:tint="@color/white"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/local_video_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_marginTop="20dp"/>
</LinearLayout>