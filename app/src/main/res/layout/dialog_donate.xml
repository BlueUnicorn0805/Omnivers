<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="3dp"
    android:gravity="center"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="20dp"
    app:contentPadding="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <hawaiiappbuilders.omniversapp.global.OpenSansBoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the amount would you like to donate?"
            android:textColor="@color/app_grey_dark"
            android:textSize="@dimen/font_5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/padding1"
            android:background="@color/app_divider" />

        <CheckBox
            android:id="@+id/chkAnonymous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/padding2"
            android:buttonTint="@color/app_grey_dark"
            android:text="Anonymous"
            android:textColor="@color/app_grey_dark"
            android:textSize="@dimen/font_7" />

        <hawaiiappbuilders.omniversapp.global.OpenSansEditText
            android:id="@+id/edtTips"
            style="@style/EditTextStyleBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="$ to donate"
            android:layout_marginHorizontal="0dp"
            android:inputType="numberDecimal"
            android:textColor="@color/app_grey_dark"
            android:textSize="@dimen/font_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding3"
            android:orientation="horizontal">

            <hawaiiappbuilders.omniversapp.global.OpenSansButton
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonmain"
                android:minHeight="41dp"
                android:text="CANCEL"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_6"
                android:visibility="visible" />

            <hawaiiappbuilders.omniversapp.global.OpenSansButton
                android:id="@+id/btnSubmit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/padding1"
                android:background="@drawable/buttonmain"
                android:minHeight="41dp"
                android:text="SUBMIT"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_6" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

