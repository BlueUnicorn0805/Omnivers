<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="3dp"
    android:gravity="center"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="20dp"
    app:contentPadding="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <hawaiiappbuilders.omniversapp.global.OpenSansBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Please Rate Service"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/font_5" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="@dimen/padding1"
                    android:background="@color/app_divider" />

                <hawaiiappbuilders.omniversapp.global.OpenSansTextView
                    android:id="@+id/orderId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding2"
                    android:gravity="center"
                    android:text="Order ID : "
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/font_7" />

                <hawaiiappbuilders.omniversapp.global.OpenSansTextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding2"
                    android:gravity="center"
                    android:text="Name : "
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/font_7" />

                <hawaiiappbuilders.omniversapp.global.OpenSansTextView
                    android:id="@+id/amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding2"
                    android:gravity="center"
                    android:text="Amount : "
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/font_7" />

                <hawaiiappbuilders.omniversapp.global.OpenSansTextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding2"
                    android:gravity="center"
                    android:text="Date : "
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/font_7" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/padding2"
                android:isIndicator="false"
                android:numStars="5"
                android:padding="0dp"
                android:rating="5"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:stepSize="0.1"
                android:theme="@style/RatingBar" />

            <hawaiiappbuilders.omniversapp.global.OpenSansTextView
                android:id="@+id/tvErrorRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Error, please rate the driver"
                android:textColor="@color/app_red"
                android:textSize="@dimen/font_8"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <hawaiiappbuilders.omniversapp.global.OpenSansBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding2"
                    android:gravity="center"
                    android:text="Leave a Tip"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/font_4"
                    android:visibility="visible" />

                <hawaiiappbuilders.omniversapp.global.OpenSansEditText
                    android:id="@+id/edtTips"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/padding1"
                    android:background="@drawable/bg_edittext_black_round"
                    android:drawableLeft="@drawable/ic_symbol_money"
                    android:drawableTint="@color/app_grey"
                    android:gravity="center"
                    android:hint="1.10"
                    android:inputType="numberDecimal"
                    android:padding="7dp"
                    android:textColor="@color/app_grey_dark"
                    android:textSize="@dimen/font_1"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding2"
                android:orientation="horizontal">

                <hawaiiappbuilders.omniversapp.global.OpenSansButton
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding2"
                    android:layout_weight="1"
                    android:background="@drawable/buttonmain_white"
                    android:elevation="@dimen/padding1"
                    android:minHeight="41dp"
                    android:text="CANCEL"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_6"
                    android:visibility="visible" />

                <hawaiiappbuilders.omniversapp.global.OpenSansButton
                    android:id="@+id/btnOk"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/buttonmain"
                    android:elevation="@dimen/padding1"
                    android:minHeight="41dp"
                    android:text="OK"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_6" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>

