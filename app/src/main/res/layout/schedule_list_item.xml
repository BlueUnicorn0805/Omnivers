<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <hawaiiappbuilders.omniversapp.global.OpenSansTextView
            android:id="@+id/appointment_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding1"
            android:layout_marginTop="@dimen/padding1"
            android:layout_marginBottom="@dimen/padding2"
            android:gravity="end"
            android:minWidth="70dp"
            android:paddingVertical="7dp"
            android:paddingHorizontal="5dp"
            android:text="07 AM"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/separator"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/app_grey_light" />

        <hawaiiappbuilders.omniversapp.global.OpenSansTextView
            android:id="@+id/appointment_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding1"
            android:layout_marginRight="@dimen/padding2"
            android:layout_marginBottom="@dimen/padding2"
            android:layout_weight="1"
            android:background="@drawable/greenround"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:padding="7dp"
            android:paddingLeft="@dimen/padding3"
            android:paddingRight="@dimen/padding3"
            android:text="10:00 AM"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ivSelected"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/padding1"
            android:layout_marginBottom="@dimen/padding2"
            android:src="@drawable/ic_item_selected" />
    </LinearLayout>

    <View
        android:id="@+id/grey_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:layout_marginRight="8dp"
        android:background="@color/app_grey_light" />

</LinearLayout>