<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingHorizontal="@dimen/padding1"
    android:orientation="vertical">

    <hawaiiappbuilders.omniversapp.global.MaterialLetterIcon
        android:id="@+id/ivCircleName"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:mli_initials="true"
        app:mli_initials_number="2"
        app:mli_letter="Family"
        app:mli_letter_color="@color/white"
        app:mli_letter_size="22"
        app:mli_letters_number="2"
        app:mli_shape_color="@color/colorButtonBackground"
        app:mli_shape_type="circle" />

    <hawaiiappbuilders.omniversapp.global.OpenSansTextView
        android:id="@+id/tvGroupName"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textColor="@color/white"
        android:textSize="@dimen/font_7"
        android:lines="1"
        android:gravity="center"
        android:text="Family"/>

</LinearLayout>