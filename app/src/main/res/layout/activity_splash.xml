<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="hawaiiappbuilders.omniversapp.ActivitySplash">

    <hawaiiappbuilders.omniversapp.global.ProportionalImageView
        android:id="@+id/splashlogo"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:src="@drawable/ic_app_logo_splash" />

    <hawaiiappbuilders.omniversapp.global.OpenSansLightTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splashlogo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="@dimen/padding5"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:text="OmniVers App"
        android:textColor="@color/app_teal"
        android:textSize="24dp" />

    <LinearLayout
        android:id="@+id/vSlogon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/tvTitle"
        android:layout_marginTop="@dimen/padding2"
        android:orientation="vertical">

    </LinearLayout>

