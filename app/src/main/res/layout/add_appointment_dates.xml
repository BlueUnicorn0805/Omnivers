<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/aa_date_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/date_ll"
        android:layout_alignBottom="@+id/date_ll"
        android:layout_alignParentLeft="true"
        android:clickable="true"
        android:onClick="onClick"
        android:src="@drawable/ic_arrow_left" />

    <LinearLayout
        android:id="@+id/date_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/aa_date_next"
        android:layout_toRightOf="@+id/aa_date_previous"
        android:orientation="horizontal">

        <include
            android:id="@+id/aa_dates_first"
            layout="@layout/add_appointment_date_cell"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <include
            android:id="@+id/aa_dates_second"
            layout="@layout/add_appointment_date_cell"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <include
            android:id="@+id/aa_dates_third"
            layout="@layout/add_appointment_date_cell"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <include
            android:id="@+id/aa_dates_fourth"
            layout="@layout/add_appointment_date_cell"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <include
            android:id="@+id/aa_dates_fifth"
            layout="@layout/add_appointment_date_cell"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <include
            android:id="@+id/aa_dates_sixth"
            layout="@layout/add_appointment_date_cell"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <include
            android:id="@+id/aa_dates_seventh"
            layout="@layout/add_appointment_date_cell"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>


    <ImageView
        android:id="@+id/aa_date_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/date_ll"
        android:layout_alignBottom="@+id/date_ll"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:onClick="onClick"
        android:src="@drawable/ic_arrow_right" />
</RelativeLayout>