<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="3dp"
    android:gravity="center"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="20dp"
    app:contentPadding="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <hawaiiappbuilders.omniversapp.global.OpenSansTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_invite"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <hawaiiappbuilders.omniversapp.global.OpenSansButton
            android:id="@+id/btnInviteGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@drawable/buttonmain"
            android:minHeight="41dp"
            android:text="Invite this group?"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_6"
            android:visibility="visible" />

        <hawaiiappbuilders.omniversapp.global.OpenSansButton
            android:id="@+id/btnEditGroupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding2"
            android:layout_weight="1"
            android:background="@drawable/buttonmain"
            android:minHeight="41dp"
            android:text="Edit group name"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_6"
            android:visibility="visible" />

        <hawaiiappbuilders.omniversapp.global.OpenSansButton
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@drawable/buttonmain"
            android:backgroundTint="@color/app_red"
            android:minHeight="41dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_6"
            android:visibility="visible" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

